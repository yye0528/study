#include<iostream>
#include<iomanip>
#include<string.h>
#include<fstream>
#include<sstream>
#include<dirent.h>
using namespace std;

void ls(bool);

int main(){

	string cmd="";
	string currDir="/home";

	do{
    	cout<<"~$ ";
    	cin>>cmd;
    	cout<<endl;

    	if (cmd=="list-short"){
    		ls();
    	}else if(cmd=="list-long"){
    		ls(true);
    	}
    }while(cmd != "exit");


    return 0;
}
void ls(bool isLong=false){
	ifstream inn;
	string   str;
	DIR *dir;
	struct dirent *entry;
    if( dir=opendir("/home/ryan/Dropbox") ){
		while(entry = readdir(dir)){
			if( strcmp(entry->d_name, ".") != 0 && strcmp(entry->d_name, "..") != 0 ){
				cout<<entry->d_name<<"\n";
			}

		}
		closedir(dir);
	}else{
		cout<<"error in openning the file";

	}
}

